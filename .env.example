# ======================================
# Mock Interview Agent - Environment Variables
# ======================================
# Copy this file to .env and fill in your values

# ============ REQUIRED ============
# Google Gemini API Key (Required for LLM functionality)
GOOGLE_API_KEY=your_google_api_key_here

# ============ OPTIONAL ============
# OpenAI API Key (Optional, only needed if using Whisper for speech-to-text)
OPENAI_API_KEY=your_openai_api_key_here

# ============ ENVIRONMENT ============
# Environment: development, staging, or production
ENVIRONMENT=development

# Enable debug mode (true/false)
DEBUG=false

# Secret key for security (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string

# ============ INTERVIEW SETTINGS ============
# Interview duration in minutes
INTERVIEW_DURATION_MINUTES=30

# Maximum time per question in seconds
MAX_QUESTION_TIME_SECONDS=300

# Maximum number of questions per interview
MAX_QUESTIONS=8

# Enable feedback generation (true/false)
FEEDBACK_ENABLED=true

# ============ VOICE SETTINGS ============
# Audio sample rate in Hz
AUDIO_SAMPLE_RATE=16000

# Number of audio channels
AUDIO_CHANNELS=1

# Audio format
AUDIO_FORMAT=wav

# ============ SESSION MANAGEMENT ============
# Session timeout in seconds (default: 1800 = 30 minutes)
SESSION_TIMEOUT_SECONDS=1800

# Maximum concurrent sessions
MAX_SESSIONS=100

# ============ LLM CONFIGURATION ============
# LLM model to use
LLM_MODEL=gemini-2.0-flash-exp

# LLM temperature (0.0 to 1.0)
LLM_TEMPERATURE=0.7

# Maximum retries for LLM calls
LLM_MAX_RETRIES=3

# LLM request timeout in seconds
LLM_TIMEOUT=30

# ============ CORS SETTINGS ============
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# ============ RATE LIMITING ============
# Enable rate limiting (true/false)
RATE_LIMIT_ENABLED=false

# Requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# ============ DATABASE (OPTIONAL) ============
# PostgreSQL connection string (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/mock_interview

# Redis connection string (for session storage in production)
# REDIS_URL=redis://localhost:6379/0

# ============ LOGGING ============
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ============ FEATURE FLAGS ============
# Enable voice features (true/false)
ENABLE_VOICE=true

# Enable text features (true/false)
ENABLE_TEXT=true

# Enable analytics (true/false)
ENABLE_ANALYTICS=false

# ============ PRODUCTION NOTES ============
# For production deployment:
# 1. Set ENVIRONMENT=production
# 2. Set DEBUG=false
# 3. Generate a strong SECRET_KEY
# 4. Configure DATABASE_URL and REDIS_URL
# 5. Update CORS_ORIGINS with your frontend URL
# 6. Enable RATE_LIMIT_ENABLED=true
# 7. Set appropriate LOG_LEVEL (WARNING or ERROR)
# 8. Ensure GOOGLE_API_KEY is properly secured
